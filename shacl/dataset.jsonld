{
  "@context": {
    "schema": "http://schema.org/",
    "dcat": "http://www.w3.org/ns/dcat#",
    "dct": "http://purl.org/dc/terms/",
    "foaf": "http://xmlns.com/foaf/0.1/",
    "sh": "http://www.w3.org/ns/shacl#"
  },
  "@graph": [
    {
      "@type": "sh:NodeShape",
      "sh:targetClass": {
        "@id": "dcat:Dataset"
      },
      "sh:property": [
        {
          "sh:path": {
            "@id": "dct:title"
          },
          "sh:minCount": 1
        },
        {
          "sh:path": {
            "@id": "dct:alternative"
          },
          "sh:minCount": 0
        },
        {
          "sh:path": {
            "@id": "dct:description"
          },
          "sh:minCount": 0
        },
        {
          "sh:path": {
            "@id": "dct:license"
          },
          "sh:minCount": 1
        },
        {
          "sh:path": {
            "@id": "dct:creator"
          },
          "sh:minCount": 1,
          "sh:class": {
            "@id": "foaf:Organization"
          },
          "sh:node": "dcat:CreatorShape"
        },
        {
          "sh:path": {
            "@id": "dcat:distribution"
          },
          "sh:minCount": 1,
          "sh:class": {
            "@id": "dcat:Distribution"
          },
          "sh:node": "dcat:DistributionShape"
        }
      ]
    },
    {
      "@id": "dcat:CreatorShape",
      "@type": "sh:NodeShape",
      "sh:targetClass": {
        "@id": "foaf:Organization"
      },
      "sh:property": [
        {
          "sh:path": {
            "@id": "foaf:name"
          },
          "sh:minCount": 1
        }
      ]
    },
    {
      "@id": "dcat:DistributionShape",
      "@type": "sh:NodeShape",
      "sh:targetClass": {
        "@id": "dcat:Distribution"
      },
      "sh:property": [
        {
          "sh:path": {
            "@id": "dcat:accessURL"
          },
          "sh:minCount": 1
        },
        {
          "sh:path": {
            "@id": "dct:format"
          },
          "sh:minCount": 1
        }
      ]
    },
	{
      "@id": "schema:DatacatalogShape",
      "@type": "sh:NodeShape",
      "sh:targetClass": {
        "@id": "schema:DataCatalog"
      },
      "sh:property": [
        {
          "sh:path": {
            "@id": "schema:dataset"
          },
          "sh:minCount": 1,
          "sh:class": {
            "@id": "schema:Dataset"
          },
          "sh:node": "schema:DatasetShape"
        }
	  ]
	},

    {
      "@id": "schema:DatasetShape",
      "@type": "sh:NodeShape",
      "sh:targetClass": {
        "@id": "schema:Dataset"
      },
      "sh:property": [
        {
          "sh:path": {
            "@id": "schema:name"
          },
          "sh:minCount": 1
        },
        {
          "sh:path": {
            "@id": "schema:alternateName"
          },
          "sh:minCount": 0
        },
        {
          "sh:path": {
            "@id": "schema:description"
          },
          "sh:minCount": 0
        },
        {
          "sh:path": {
            "@id": "schema:license"
          },
          "sh:nodeKind": {
            "@id": "sh:IRI"
          },
          "sh:minCount": 1
        },
        {
          "sh:path": {
            "@id": "schema:creator"
          },
          "sh:minCount": 1,
          "sh:class": {
            "@id": "schema:Organization"
          },
          "sh:node": "schema:CreatorShape"
        },
        {
          "sh:path": {
            "@id": "schema:distribution"
          },
          "sh:minCount": 1,
          "sh:class": {
            "@id": "schema:DataDownload"
          },
          "sh:node": "schema:DistributionShape"
        }
      ]
    },
    {
      "@id": "schema:CreatorShape",
      "@type": "sh:NodeShape",
      "sh:targetClass": {
        "@id": "schema:Organization"
      },
      "sh:property": [
        {
          "sh:path": {
            "@id": "schema:name"
          },
          "sh:minCount": 1
        }
      ]
    },
    {
      "@id": "schema:DistributionShape",
      "@type": "sh:NodeShape",
      "sh:targetClass": {
        "@id": "schema:DataDownload"
      },
      "sh:property": [
        {
          "sh:path": {
            "@id": "schema:contentUrl"
          },
          "sh:minCount": 1
        },
        {
          "sh:path": {
            "@id": "schema:encodingFormat"
          },
          "sh:minCount": 1
        }
      ]
    }
  ]
}
