    @prefix sh: <http://www.w3.org/ns/shacl#> .
    @prefix schema: <http://schema.org/> .
    @prefix dcat: <http://www.w3.org/ns/dcat#> .
    @prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
    @prefix foaf: <http://xmlns.com/foaf/0.1/> .
    @prefix dc: <http://purl.org/dc/terms/> .
    @prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
    @prefix reg: <http://terms.netwerkdigitaalerfgoed.nl/ns/register#> .

    ##
    ## Schema.org
    ##

    #
    # Class shapes
    #

    reg:DatacatalogShape
        a sh:NodeShape ;
        sh:name "Datacatalogus"@nl, "Data catalog"@en ;
        rdfs:comment "Een datacatalogus bestaat uit een set van datasetbeschrijvingen"@nl, "A data catalog consists of a set of dataset descriptions"@en ;
        sh:targetClass schema:DataCatalog ;
        sh:property
            # Required properties
            reg:SchemaDatasetProperty,
            reg:SchemaNameReqProperty,
            reg:SchemaPublisherProperty,
            # Recommended properties
            reg:SchemaDescriptionProperty ;
    .

    reg:DatasetShape
        a sh:NodeShape ;
        sh:name "Datasetbeschrijving"@nl, "Dataset description"@en ;
        rdfs:comment "Een datasetbeschrijving bestaat uit een elementen die de dataset beschrijft"@nl, "A dataset description consists of elements that describe the dataset"@en ;
        sh:targetClass schema:Dataset ;
        sh:nodeKind sh:IRI ;

        sh:property
            # Required properties
            reg:SchemaNameReqProperty,
            reg:SchemaLicenseReqProperty,
            reg:SchemaPublisherProperty,
            # Recommended properties
            reg:SchemaDescriptionProperty,
            reg:SchemaDistributionProperty,
            reg:SchemaCreatorProperty,
            reg:SchemaDateCreatedProperty,
            reg:SchemaDatePublishedProperty,
            reg:SchemaDateModifiedProperty ;

            # TODO
            # reg:SchemaVersionProperty, reg:SchemaManEntityOfPageProperty, reg:SchemaInLanguageProperty, reg:SchemaIsBasedOnUrlProperty, reg:SchemaCitationProperty, 
            # reg:SchemaGenreProperty, reg:SchemaKeywordsProperty, reg:SchemaSpatialCoverageProperty, reg:SchemaTemporalCoverageProperty, reg:SchemaIncludedInDataCatalogProperty, 
            # reg:SchemaAlternateNameProperty ;
    .

    reg:DistributionShape
        a sh:NodeShape ;
        sh:targetClass schema:DataDownload ;
        sh:property
            # Required properties
            reg:DistributionContentUrlProperty, 
            reg:DistributionEncodingFormatProperty,
            # Recommended properties
            reg:SchemaNameRecProperty,
            reg:SchemaDescriptionProperty,
            reg:SchemaDatePublishedProperty,
            reg:SchemaDateModifiedProperty,
            reg:SchemaLicenseRecProperty ;
            # TODO
            # reg:SchemaInLanguageProperty, reg:SchemaContentSizeProperty
    .

    reg:CreatorShape
        a sh:NodeShape ;
        sh:targetClass schema:Organization ;
        # TODO schema:Person
        sh:property
            # Required properties
            reg:CreatorNameProperty ;
            # TODO
            # reg:CreatorUrlProperty ? of @id ?
            # Recommended properties
            # TODO
            # reg:SchemaAlternateNameProperty, reg:SchemaSameAsProperty
    .

    # TODO 
    # reg:PublisherShape

    #
    # Property shapes
    #

    reg:CreatorNameProperty a sh:PropertyShape ;
        sh:minCount 1 ;
        sh:path schema:name ;
    .

    reg:DistributionContentUrlProperty a sh:PropertyShape ;
        rdfs:comment "De URL waar de distributie rechtstreeks toegankelijk is."@nl, "The URL where the distribution can be directly accessed."@en ;
        sh:minCount 1 ;
        sh:path schema:contentUrl ;
        sh:message "Een dataset distributie dient een content URL te bevatten"@nl, "A dataset distribution should contain an content URL"@en ;
    .

    reg:DistributionEncodingFormatProperty a sh:PropertyShape ;
        rdfs:comment "Het MIME-formaat van de distributie, bijvoorbeeld application/sparql-query voor een SPARL-endpoint of application/ld+json voor een datadump die is geserialiseerd als JSON-LD."@nl, "The distribution's MIME format, for example application/sparql-query for a SPARL endpoint or application/ld+json for a data dump serialized as JSON-LD."@en ;
        sh:minCount 1 ;
        sh:path schema:encodingFormat ;
        sh:message "Een dataset distributie dient een encoding format te bevatten"@nl, "A dataset distribution should contain an encoding format"@en ;
    .

    reg:SchemaDatasetProperty a sh:PropertyShape ;
        sh:class schema:Dataset ;
        sh:minCount 1 ;
        sh:node schema:DatasetShape ;
        sh:path schema:dataset ;
        sh:message "Een datasetcatalogus dient minimaal een dataset te bevatten"@nl, "A datasetcatalog should contain at least one dataset"@en .

    reg:SchemaNameReqProperty a sh:PropertyShape ;
        rdfs:comment "Naam van de dataset"@nl, "Name of the dataset"@en ;
        sh:path schema:name ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
        sh:message "Een datasetbeschrijving dient een naam te bevatten"@nl, "A dataset description should have a name"@en
    .

    reg:SchemaNameRecProperty a sh:PropertyShape ;
        rdfs:comment "Naam van de dataset"@nl, "Name of the dataset"@en ;
        sh:path schema:name ;
        sh:minCount 0 ;
        sh:datatype xsd:string ;
    .

    reg:SchemaDescriptionProperty a sh:PropertyShape ;
        rdfs:comment "Beschrijving van de dataset"@nl, "Description of the dataset"@en ;
        sh:path schema:description ;
        sh:minCount 0 ;
        sh:datatype xsd:string ;
    .

    reg:SchemaDateCreatedProperty a sh:PropertyShape ;
        rdfs:comment "Aanmaakdatum van de datasetbeschrijving"@nl, "Creation date of the dataset description"@en ;
        sh:path schema:dateCreated ;
        sh:minCount 0 ;
        sh:datatype xsd:date ;
    .

    reg:SchemaDatePublishedProperty a sh:PropertyShape ;
        rdfs:comment "Publicatiedatum van de datasetbeschrijving"@nl, "Publication date of the dataset description"@en ;
        sh:path schema:datePublished ;
        sh:minCount 0 ;
        sh:datatype xsd:date ;
    .

    reg:SchemaDateModifiedProperty a sh:PropertyShape ;
        rdfs:comment "Datum waarop de datasetbeschrijving voor het laatst is gewijzigd"@nl, "Date on which the dataset description was last modified"@en ;
        sh:path schema:dataModified ;
        sh:minCount 0 ;
        sh:datatype xsd:date ;
    .

    reg:SchemaCreatorProperty a sh:PropertyShape ;
        sh:path schema:creator ;
        sh:class schema:Organization ;
        sh:minCount 0 ;
        sh:node reg:CreatorShape ;
    .

    reg:SchemaPublisherProperty a sh:PropertyShape ;
        rdfs:comment "Persoon of organisatie die de dataset heeft gepubliceerd"@nl, "Person or organization that published the dataset"@en ;
        sh:class schema:Organization ;
        # TODO schema:Person
        sh:path schema:publisher ;
        sh:minCount 1 ;
        sh:severity sh:Warning ;
        sh:message "Een datasetbeschrijving dient een uitgever te bevatten"@nl, "A dataset description should have a publisher"@en
    .

    reg:SchemaLicenseReqProperty a sh:PropertyShape ;
        rdfs:comment "Licentie die van toepassing is op de datasetbeschrijving"@nl, "License applicable to the dataset description"@en ;
        sh:path schema:license ;
        sh:or (
            [ sh:nodeKind sh:Literal ; ]
            [ sh:nodeKind sh:IRI ; ]
        ) ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Een datasetbeschrijving dient een licentie te bevatten (in de vorm van een string of URI)"@nl, "A dataset description should have a license (in the form of a string or URL)"@en
    .

    reg:SchemaLicenseRecProperty a sh:PropertyShape ;
        rdfs:comment "Licentie die van toepassing is op de datasetbeschrijving"@nl, "License applicable to the dataset description"@en ;
        sh:path schema:license ;
        sh:or (
            [ sh:nodeKind sh:Literal ; ]
            [ sh:nodeKind sh:IRI ; ]
        ) ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
        sh:message "Een distributie mag maximaal een licentie bevatten (in de vorm van een string of URI)"@nl, "A dataset distribution should have a maximum of one license (in the form of a string or URL)"@en
    .

    reg:SchemaDistributionProperty a sh:PropertyShape ;
        rdfs:comment "Distributies van een dataset"@nl ;
        sh:class schema:DataDownload ;
        sh:minCount 1 ;
        sh:message "Een datasetbeschrijving dient minimaal een distributie te bevatten"@nl, "A dataset should have at least one distributiion"@en ;
        sh:node reg:DistributionShape ;
        sh:path schema:distribution ;
    .

    ##
    ## DCAT
    ##

    #
    # Class shapes
    #

    dcat:DatasetShape
        a sh:NodeShape ;
        sh:property [
            sh:minCount 1 ;
            sh:path dc:title
        ], [
            sh:minCount 0 ;
            sh:path dc:alternative
        ], [
            sh:minCount 0 ;
            sh:path dc:description
        ], [
            sh:minCount 1 ;
            sh:path dc:license
        ],
        [
            sh:path dc:publisher ;
            sh:minCount 1 ;
            sh:severity sh:Warning ;
            sh:class foaf:Organization ;
            sh:node "dcat:CreatorShape"
        ],
        [
            sh:path dc:creator ;
            sh:minCount 0 ;
            sh:class foaf:Organization ;
            sh:node "dcat:CreatorShape"
        ],
        [
            sh:path dcat:distribution ;
            sh:minCount 0 ;
            sh:class dcat:Distribution ;
            sh:node "dcat:DistributionShape"
        ] ;
        sh:targetClass dcat:Dataset ;
    .

    dcat:DistributionShape
        a sh:NodeShape ;
        sh:or (
            [ sh:property [
                sh:minCount 1 ;
                sh:path dcat:accessURL
                ]
            ]
            [ sh:property [
                sh:minCount 1 ;
                sh:path dcat:downloadURL
                ]
            ]
        );
        sh:property [
            sh:minCount 1 ;
            sh:path dc:format
        ] ;
        sh:targetClass dcat:Distribution ;
    .

    dcat:CreatorShape
        a sh:NodeShape ;
        sh:property [
            sh:minCount 1 ;
            sh:path foaf:name
        ] ;
        sh:targetClass foaf:Organization ;
    .
