{
  "name": "@dataset-register/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "dependencies": {
    "@dataset-register/core": "*",
    "@fastify/accepts-serializer": "^6.0.3",
    "@fastify/cors": "^11.0.0",
    "@fastify/swagger": "^9.5.2",
    "@fastify/swagger-ui": "^5.0.1",
    "@rdfjs/types": "2.0.1",
    "env-schema": "^6.1.0",
    "fastify": "^5.6.1",
    "psl": "1.10.0",
    "rdf-ext": "2.6.0",
    "rdf-serialize": "4.0.1"
  },
  "nx": {
    "projectType": "application",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/api/dist",
          "bundle": true,
          "main": "apps/api/src/main.ts",
          "declarationRootDir": "apps/api/src",
          "tsConfig": "apps/api/tsconfig.app.json",
          "assets": [
            {
              "input": "apps/api/src/assets",
              "glob": "*",
              "output": "assets"
            },
            "requirements/shacl.ttl"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "dev": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@dataset-register/api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@dataset-register/api:build:development"
          },
          "production": {
            "buildTarget": "@dataset-register/api:build:production"
          }
        }
      },
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx nodemon --watch requirements/shacl.ttl --exec 'npx nx dev api'"
        }
      },
      "copy-workspace-modules": {},
      "prune-lockfile": {}
    }
  }
}
